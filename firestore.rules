rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Properties: Everyone can read, only authenticated users can write
    match /properties/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Queries: Everyone can create (submit form), only authenticated users can read/delete
    match /queries/{document=**} {
      allow create: if true;
      allow read, delete, update: if request.auth != null;
    }
  }
}
